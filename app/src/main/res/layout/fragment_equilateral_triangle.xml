<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="59dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/equilateralTriangleBackButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/equilateralTriangleFragmentImageView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_marginBottom="83dp"
                android:contentDescription="@string/square"
                app:layout_constraintBottom_toTopOf="@+id/equilateralTriangleDecimalPointsTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/equilateral_triangle_labelled" />

            <TextView
                android:id="@+id/equilateralTriangleFragmentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="132dp"
                android:text="@string/equilateral_triangle"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/equilateralTriangleSideLengthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="292dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/equilateralTriangleSideLengthTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equilateralTriangleSideLengthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="308dp"
                android:text="@string/sideLength_l"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equilateralTriangleHeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="348dp"
                android:text="@string/height_h"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equilateralTrianglePerimeterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="388dp"
                android:text="@string/perimeter_p"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equilateralTriangleAreaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="424dp"
                android:text="@string/area_a"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/equilateralTrianglePerimeterEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:layout_marginTop="148dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/equilateralTrianglePerimeterTextView"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleSpinner" />

            <EditText
                android:id="@+id/equilateralTriangleAreaEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="188dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/equilateralTriangleAreaTextView"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleSpinner" />

            <Button
                android:id="@+id/btnEquilateralTriangleCalculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/calculate"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleAreaTextView" />

            <TextView
                android:id="@+id/equilateralTriangleAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="124dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleAreaTextView" />

            <EditText
                android:id="@+id/equilateralTriangleHeightEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="332dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="15"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/equilateralTriangleHeightTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/equilateralTriangleSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:entries="@array/equilateral_triangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equilateralTriangleCalculateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:text="@string/calculate_text"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/equilateralTriangleSeekBar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="256dp"
                android:max="15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/equilateralTriangleSeekBarValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="15"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/equilateralTriangleSeekBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleDecimalPointsTextView" />

            <TextView
                android:id="@+id/equilateralTriangleDecimalPointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/decimal_points_text"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleSpinner" />

            <ImageView
                android:id="@+id/equilateralTriangleWebViewIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/book_icon" />

            <CheckBox
                android:id="@+id/cbEquilateralTriangleWorking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:text="@string/show_working"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTrianglePerimeterTextView" />

            <Button
                android:id="@+id/btnEquilateralTriangleClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="504dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/clear"
                android:textColor="@android:color/background_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/equilateralTriangleFormulaeIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/formula_symbol" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equilateralTriangleAreaTextView">

                <TextView
                    android:id="@+id/equilateralTriangleWorking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="156dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>